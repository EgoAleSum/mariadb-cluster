[Unit]
Description=Create an overlay network for the Docker cluster

Requires=docker.service
Wants=network-online.target
After=docker.service network-online.target

[Service]
Type=oneshot
RemainAfterExit=true
ExecStartPre=/usr/bin/chmod +x /opt/bin/docker-overlay-network.sh
ExecStart=/usr/bin/bash /opt/bin/docker-overlay-network.sh
